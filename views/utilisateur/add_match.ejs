<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" >
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;700&display=swap" rel="stylesheet">
  <title>Add new match</title>
</head>
<body>
  <%-include('navbar')-%>
  
<center class="mb-4"><h2>  <i class="fa-solid fa-futbol"></i> Add new match</h2></center>
         
<section class="container">
  <form method="post">
    <div class="row">
      <div class="col">
        <label><i class="fa fa-users" aria-hidden="true"></i>Team A</label>
        <select name="teamA" class="form-control" >
          <% if(locals.equipes) { for(equipe of equipes ) { %>
            <option value="<%=equipe.code_equipe %>"><%=equipe.nom_equipe%> </option>    
            <% } }%>
        </select>
      </div>
      <div class="col">
        <label><i class="fa fa-users" aria-hidden="true"></i>Team B</label>
        <select name="teamB" class="form-control">
          <% if(locals.equipes) { for(equipe of equipes ) { %>
            <option value="<%=equipe.code_equipe %>"><%=equipe.nom_equipe%> </option>    
            <% } } %>
        </select>
      </div>
      <div class="col">
        <label><i class="fa-solid fa-calendar-days"></i> Date</label>
        <input type="date" name="date_match" class="form-control" >
      </div>
      <div class="col-12 mt-4">
        <center>
          <button class="btn btn-success" > <i class="fa-solid fa-floppy-disk"></i> Add new match</button> 
        </center>
      </div>
    </div>
  </form>
 </section>

 <section class="mt-2 container">
  <center class="mb-2 mt-4"><h4>  <i class="fa-solid fa-list"></i> List of matchs </h4></center>
  <div class="container">
    <div class="row justify-content-center">
      <% if(locals.equipes) { for (match of matchs) { %>
        <div class="col-12 text-center " style="font-size: 18px;"> 
          <%= match.nom_a %> VS <%= match.nom_b %> of <%= new Date(match.date_match).toLocaleDateString() %>
        </div>
      <% } } %>
    </div>
  </div>
  
 </section>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</html>